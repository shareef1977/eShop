    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
    
            </div>
            <table class="table">
                <thead>
                    <tr>
                        <th>Order Id</th>
                        <th>Payment <br> Method</th>
                        <th>Payment <br> Status</th>
                        <th>Address</th>
                        <th>Order Status</th>
                        <th>Bill</th>
                        <th>Date</th>
                        <th>Items</th>
                    </tr>
                    
                </thead>
                <tbody>
                    <% for(let data of orderData) { %> 
                    <tr>
                        <td><%= data._id %> </td>
                        <td><%= data.paymentStatus %> </td>
                        <% if(data.isCompleted == true) { %> 
                            <td>Completed</td>
                        <% } else { %>
                            <td>Pending</td> 
                        <% } %> 
                        <td><%= data.address.addressLine %> </td>
                        <td><%= data.orderStatus[0].type %> </td>
                        <td>Rs.<%= data.bill %> </td>
                        <td><%= data.orderStatus[0].date %> </td>
                        <td>
                            <button data-toggle="modal" class="btn btn-success rounded" onclick="orderedProducts('<%= data._id %>')" data-target="#exampleModal">Items</button>
                            <!-- <a class="btn btn-success rounded" href="/orderedProducts/<%= //data._id %> ">Items</a> -->
                        </td>
                    </tr>
                    <% } %> 
                </tbody>
            </table>
        </div>
    </div>


    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabel">Products</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
              <div class="row">
                <% if(locals.cartList) { %> 
                <% cartList.forEach((p) => { %> 
                    <% p.product.forEach((p1) => { %> 
                <div class="col-md-12">
                    <div class="col-md-3">
                        <img class="img-fluid" src="<%= p1.images[0].url %> " alt="">
                    </div>
                    <div class="col-md-4">
                        <div class="row pt-5">
                            <div class="col-md-12 align-middle">
                                <h4><%= p1.name %> </h4>
                            </div>
                            <div class="col-md-12">
                                <h6><%= p1.highlights %> </h6>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-2 pt-5">
                        <h5>Qty: <%= p.itemQuantity %> Psc </h5>
                    </div>
                    <div class="col-md-3 pt-5">
                        <h4 class="text-success">Rs.<%= p1.price %> </h4>
                    </div>
                </div>
                <% }) }) %> 
                <% } %> 
              </div>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-success" data-dismiss="modal">Done</button>
             
             
              
            </div>
          </div>
        </div>
      </div>


