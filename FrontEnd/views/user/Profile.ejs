<%- include('../partials/flash') %> 

<div class="container ">
    <div class="row ">
        <a href="/" class="nav-item nav-link active ps-5">Home</a>
        <div class="col-md-12 d-flex align-items-center justify-content-center">
            <div class="col-md-6 bg-secondary rounded  w-75">
                <div class="row">
                    <div class="col-md-12">
                        <div class="d-flex flex-column align-items-center  text-center p-3 py-5"><img class="rounded-circle mt-5"
                            width="150px"
                            src="https://st3.depositphotos.com/15648834/17930/v/600/depositphotos_179308454-stock-illustration-unknown-person-silhouette-glasses-profile.jpg">
                        
                    </div>
                    </div>
                    <div class="col-md-12">
                        
                        <div class="col-md-4 pt-4  float-left">
                            <h6>User Name</h6>
                        </div>
                        <div class="col-md-8 pt-4  float-left">
                            <h6><%= user.name %> </h6>
                        </div>
                        <div class="col-md-4 pt-4  float-left">
                            <h6>Email</h6>
                        </div>
                        <div class="col-md-8 pt-4  float-left">
                            <h6><%= user.email %> </h6>
                        </div>
                        <div class="col-md-4 pt-4  float-left">
                            <h6>Mobile</h6>
                        </div>
                        <div class="col-md-8 pt-4  float-left">
                            <h6><%= user.mobile %> </h6>
                        </div>
                        <div class="col-md-4 pt-4  float-left">
                            <h6>Email Verification</h6>
                        </div>
                        <div class="col-md-8 pt-4  float-left">
                            <% if(user.verified == true) { %> 
                            <h6>Completed</h6>
                            <% } else { %> 
                             <h6>Not Completed</h6>
                             <% } %>    
                        </div>
                        <div class="col-md-4 pt-4  float-left">
                            <h6>Block Status</h6>
                        </div>
                        <div class="col-md-8 pt-4  float-left">
                            <% if(user.blockStatus == false) { %> 
                            <h6>Unblocked</h6>
                            <% } else { %> 
                             <h6>Blocked</h6>
                            <% } %>    
                        </div>
                        <div class="col-md-12 pt-4 float-left text-center">
                            <h5 class="text-warning">Address</h5>
                        </div>
                        <% for(let addr of address) { %> 
                        <% if(addr) { %>
                            
                            <div class="col-md-4 pt-4 float-left ">
                                <h6>House No</h6>
                            </div>
                            <div class="col-md-8 pt-4  float-left">
                                <h6><%= addr.houseNo %> </h6>
                            </div>
                            <div class="col-md-4 pt-4 float-left text-left">
                                <h6>Street</h6>
                            </div>
                            <div class="col-md-8 pt-4   float-left">
                                <h6><%= addr.street %> </h6>
                            </div>
                            <div class="col-md-4 pt-4 float-left">
                                <h6>District</h6>
                            </div>
                            <div class="col-md-8 pt-4  float-left">
                                <h6><%= addr.district %> </h6>
                            </div>
                            <div class="col-md-4 pt-4 float-left">
                                <h6>State</h6>
                            </div>
                            <div class="col-md-8 pt-4  float-left">
                                <h6><%= addr.state %> </h6>
                            </div>
                            <div class="col-md-4 pt-4 float-left">
                                <h6>Pincode</h6>
                            </div>
                            <div class="col-md-8 pt-4  float-left">
                                <h6><%= addr.pincode %> </h6>
                            </div><br>
                            
                            
                        
                        <!-- <div class="col-md-12 float-left"> -->
                            <button class="btn btn-danger rounded m-3 " data-toggle="modal" data-target="#exampleModal"  type="button"  >Delete</button> <br>
                            <!-- <a  href="/deleteAddress/<%= //addr._id %>" class="btn btn-danger rounded m-3">delete</a><br> -->
                        <!-- </div> -->
                       
                    <% } %> 

                    <% } %>
                    <div class="col-md-6 mt-4 pb-4">
                        <a href="/addAddress " class="btn btn-primary rounded">Add Another Address</a>
                    </div>
                </div>
                </div>
            </div>
        </div>
    </div>
</div>
<%- include('../partials/userFooter')  %> 

<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Delete Address</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          Do you want delete this Address ..?
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
         
          <button type="button"
          <% for(let addr of address) { %>  
            onclick="deleteAddress('<%= addr._id %>')"
          <% } %> 
          class="btn btn-danger" data-dismiss="modal">Delete</button>
        </div>
      </div>
    </div>
  </div>


<script>
    function deleteAddress(id) {

        fetch('/deleteAddress/'+id , {
            method:'delete',
            headers: {
                'Content-type': 'application/json',
                body: JSON.stringify({hai:"jhj"})
            }
        })
        .then(res => res.json())
        .then(data => {
            success:location.reload()
        })
    }
</script>