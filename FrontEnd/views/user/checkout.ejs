    <!-- Checkout Start -->
    <div class="container-fluid pt-5">
        <div class="row px-xl-5">
            <!-- <% cartList.forEach((p) => { %> 
            
                <% }) %>  -->
            <form id="pay" method="post">
                <div class="col-lg-8 float-left">
                    <div class="mb-4">
                        
                            <input type="hidden" value="<%= cartList[0]._id %>" name="cartId">
                          
                                <h4 class="font-weight-semi-bold mb-4">Billing Address</h4>
                                <div class="row">
                                    <div class="col-md-6 form-group">
                                        <label>Name</label>
                                        <input class="form-control" name="name" type="text" placeholder="Your Name"
                                            value="<%= user.name %> " required>
                                    </div>
                                    <!-- <div class="col-md-6 form-group">
                            <label>Last Name</label>
                            <input class="form-control" type="text" placeholder="Doe">
                        </div> -->
                                    <div class="col-md-6 form-group">
                                        <label>E-mail</label>
                                        <input class="form-control" name="email" type="text"
                                            placeholder="example@email.com" value="<%= user.email %>" required>
                                    </div>
                                    <div class="col-md-6 form-group">
                                        <label>Mobile No</label>
                                        <input class="form-control" type="text" name="mobile" placeholder="Mobile no"
                                            value="<%= user.mobile %>" required>
                                    </div>
                                    <% for(let i=0; i < address.length; i++) { %>
                                        <div class="col-md-12 form-group d-flex ">
                                            <div class="col-md-1">
                                                <input class="w-75" type="radio" id="address" placeholder="House No"
                                                    name="addressLine"
                                                    value="<%= address[i].houseNo %>, <%= address[i].street %>, <%= address[i].district %>, <%= address[i].state %>, <%= address[i].pincode %>"
                                                    required>
                                            </div>
                                            <label>
                                                <%= address[i].houseNo %>, <%= address[i].street %>, <%=
                                                            address[i].district %>, <%= address[i].state %>, <%=
                                                                    address[i].pincode %>
                                            </label>
                                        </div>
                                        
                                        <% } %>





                                         
                                </div>
                                <% if(address.length > 0) { %> 
                                    <a class="btn btn-primary" href="/checkoutAddress">Add Another Address</a>
                                <% } else { %> 
                                    <a class="btn btn-primary" href="/checkoutAddress">Add Address</a>
                                <% } %> 
                    </div>








                   
                </div>
                <div class="col-lg-4 float-left">
                    <div class="card border-secondary mb-5">
                        <div class="card-header bg-secondary border-0">
                            <h4 class="font-weight-semi-bold m-0">Order Total</h4>
                        </div>
                        <div class="card-body">
                            <h5 class="font-weight-medium mb-3">Products</h5>

                            <% cartList.forEach((p)=> { %>
                                <% p.product.forEach((p1)=> { %>
                                    <div class="d-flex justify-content-between">
                                        <p>
                                            <%= p1.name %> - <%= p.itemQuantity %> Pcs
                                        </p>
                                        <% const total=parseInt(p1.price)*parseInt(p.itemQuantity) %>
                                            <p class="text-success">Rs.<%= total %>
                                            </p>
                                    </div>
                                    <% }) %>
                                        <% }) %>
                                            <hr class="mt-0">
                                            <div class="d-flex justify-content-between mb-3 pt-1">
                                                <h6 class="font-weight-medium">Subtotal</h6>
                                                <h6 class="font-weight-medium">Rs.<%= subtotal %>
                                                </h6>
                                            </div>
                                            <div class="d-flex justify-content-between mb-3">
                                                <h6 class="font-weight-medium">Shipping</h6>
                                                <h6 class="font-weight-medium">Rs.<%= shipping %>
                                                </h6>
                                            </div>
                                            <% if(discount) { %> 
                                                <div class="d-flex justify-content-between">
                                                    <h6 class="font-weight-medium">Discount</h6>
                                                    <h6 class="font-weight-medium">Rs.<%= discount %>
                                                    </h6>
                                                </div>
                                            <% } %> 
                        </div>
                        <div class="card-footer border-secondary bg-transparent">
                            <div class="d-flex justify-content-between mt-2">
                                <h5 class="font-weight-bold">Total</h5>
                                <h5 class="font-weight-bold">Rs.<%= grandtotal %>
                                </h5>
                            </div>
                        </div>
                    </div>
                    <div class="card border-secondary mb-5">
                        <div class="card-header bg-secondary border-0">
                            <h4 class="font-weight-semi-bold m-0">Payment</h4>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <div class="custom-control custom-radio">
                                    <input type="radio" class="custom-control-input" name="payment" id="paypal"
                                        value="cod" required>
                                    <label class="custom-control-label" for="paypal">COD</label>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="custom-control custom-radio">
                                    <input type="radio" class="custom-control-input" name="payment" value="online"
                                        id="directcheck" required>
                                    <label class="custom-control-label" for="directcheck">Online Payment</label>
                                </div>
                            </div>

                        </div>
                        <% if(address.length > 0) { %> 
                        <div class="card-footer border-secondary bg-transparent">
                            <button class="btn btn-lg btn-block btn-primary font-weight-bold my-3 py-3" id="order"
                                type="submit">Place Order</button>
                        </div>
                        <% } else { %> 
                            <div>
                                <h6 class="text-danger">Your address is not added to place order..?</h6>
                                <h4 class="text-success">Please add an address...</h4>
                            </div>
                        <% } %> 
                    </div>
                </div>
        </div>
        </form>
    </div>
    <!-- Checkout End -->
    <script src="https://checkout.razorpay.com/v1/checkout.js"></script>
    <script>

       


        $("#pay").submit((e) => {
            e.preventDefault()
            $.ajax({
                url: '/placeOrder',
                method: 'post',
                data: $("#pay").serialize(),
                success: (response) => {
                    // alert(response)

                    if (response.codSuccess) {
                        location.href = '/orderSuccess'
                    } else {
                        razorpayPayment(response)
                    }
                }
            })
        })

        function razorpayPayment(order) {
            var options = {
                "key": "rzp_test_G1K3GI8FmZWVBI", // Enter the Key ID generated from the Dashboard
                "amount": order.amount, // Amount is in currency subunits. Default currency is INR. Hence, 50000 refers to 50000 paise
                "currency": "INR",
                "name": "eShop",
                "description": "Test Transaction",
                "image": "https://example.com/your_logo",
                "order_id": order.id, //This is a sample Order ID. Pass the `id` obtained in the response of Step 1
                "handler": function (response) {
                    // alert(response.razorpay_payment_id);
                    // alert(response.razorpay_order_id);
                    // alert(response.razorpay_signature);

                    verifyPayment(response,order)
                },
                "prefill": {
                    "name": "Gaurav Kumar",
                    "email": "gaurav.kumar@example.com",
                    "contact": "9999999999"
                },
                "notes": {
                    "address": "Razorpay Corporate Office"
                },
                "theme": {
                    "color": "#3399cc"
                }
            };
            var rzp1 = new Razorpay(options) 
            rzp1.open();
        }
        function verifyPayment(payment,order) {
            $.ajax({
                url:'/verifyPay',
                data:{
                    payment,
                    order
                },
                method: 'post',
                success:(response) => {
                    if(response.status) {
                        location.href = '/orderSuccess'
                    } else { 
                        alert("Payment failed")
                    }
                }
            })
        }



