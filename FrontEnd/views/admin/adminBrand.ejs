    <!-- for table style -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.2/css/bootstrap.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.12.1/css/dataTables.bootstrap4.min.css">

</head>
<body>
    <header id="header">
        <div class="col-md-12 d-flex bg-info">
            <h1 class="text-light m-2  ps-3" style="background-color: pink;width: 2rem; font-weight: bold;">E</h1><h1 style="font-weight: bold;" class="text-light float-left mt-2">SHOP</h1>
            <div class="col-md-10">
                <h4 class="text-light mt-3" style="text-align: center;">Product Brand Management </h4>
            </div>
        </div>
    </header>

<!-- include header -->

<!-- main site --> 

<main id="site-main">
    <div class="container">
        <%- include('../partials/flash') %> 
        
         
         <div class="m-4 d-flex">
           <a href="/addBrand"class="btn btn-primary me-3">Add Brand</a>
           <div>
           <form action="/adminHome" >
            <button type="submit" class="btn text-danger ps-2">Dashboard</button>
          </form>
        </div>
         </div>
        
        <!-- form handling -->
        
            <table id="example" class="table table-striped table-bordered " style="width:100%">
                <thead>
                    <tr>
                        
                        <th>Brand Names</th>
                       
                        
                       
                        <th>Delete Brand</th>
                        
                    </tr>
                </thead>
  
               
                <tbody>
                   
                  <% for (let brand of brands) { %> 
                    <tr>
                        <td><%= brand.name %></td>
                        
                        
                        
                        <td><a href="/deleteBrand/<%= brand._id %>" class="btn btn-danger ">Delete</a></td>
                       
                       
                    </tr>
                    <% } %>
                    
                </tbody>
              </table>
        
       
    </div>
</main>

<!-- main site -->
 
<!-- include footer -->
<script src="https://code.jquery.com/jquery-3.5.1.js"></script>
