<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin-Products</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">

    <!-- for table style -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.2/css/bootstrap.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.12.1/css/dataTables.bootstrap4.min.css">
</head>
<body>
    <div class="container">
        <div class="row">
          <!-- Image and text -->
            <nav class="navbar navbar-light bg-light">
              <a class="navbar-brand " href="#">
                <img src="img/eshop.png" width="30" height="30" class="d-inline-block align-top " alt="">
                  E-SHOP
              </a>
            </nav>
            <%- include('../partials/flash') %> 
            <div class="m-4 d-flex">
              <a href="/adminCategory"class="btn btn-primary">All Categories</a>
            </div>
            

            <table id="example" class="table table-striped table-bordered " style="width:100%">
              <thead>
                  <tr>
                      <th>Product Name</th>
                      <th>Price</th>
                      <th>Discount</th>
                      <th>Available Stock</th>
                      <th>Image</th>
                      <th>Edit</th>
                      <th>Remove</th>
                  </tr>
              </thead>

             
              <tbody>
                <% for(let product of products) { %> 
                  <tr>
                      <td><%= product.name %></td>
                      <td>Rs.<%= product.price %></td>
                      <td><%= product.discount %>%</td>
                      <td><%= product.stock %> Pcs</td>
                      <td><img src="<%= product.image %>" class="w-25 h-25" alt=""></td>
                      <td><a href="/editProduct/<%= product._id %> " class="btn card-link btn-success">Edit</a></td>
                      <td><form action="/deleteProduct/<%= product._id %>?_method=PUT" method="post"><button
                        class="btn btn-danger"
                        type="submit"onclick="return confirm('Do you want to delete <%= product.name%>?')">Remove</button></form></td>
                  </tr>
                 <% } %>  
              </tbody>
            </table>
        </div>      
           
               
              
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script src="https://cdn.datatables.net/1.12.1/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.12.1/js/dataTables.bootstrap4.min.js"></script>
    <script src="js/adminCategory.js"></script>
</body>
</html>