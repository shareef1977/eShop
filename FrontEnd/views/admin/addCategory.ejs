        crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="css/addProduct.css">
</head>

<body>
    <header id="header">
        <nav>
            <div class="container">
                <div class="text-center">
                    <a href="" class="nav-brand text-dark"> Brand Management</a>
                </div>
            </div>
        </nav>
    </header>

    <!-- include header -->

    <!-- main site -->

    <main id="site-main">
        <div class="container">
            <%- include('../partials/flash') %>
                <div class="box-nav d-flex justify-between">
                    <div class="filter">
                        <a href="/adminCategory"><i class="fas fa-angle-angle-left"></i> All Categories</a>
                    </div>
                </div>
                <div class="form-title text-center">
                    <h2 class="text-dark">New Brand</h2>
                    <span class="text-light">Use below form to add a new brand</span>
                </div>

                <!-- form handling -->
                <form action="/addCategory/add" method="POST" id="add_user">
                    <div class="new_user">


                        <div class="form-group">
                            <label for="name" class="text-light">New Category name</label>

                            <input type="text" name="name" value="" placeholder="Category" required>
                        </div>




                        <div class="form-group">
                            <button type="submit" class="btn text-dark update">Save</button>

                        </div>
                    </div>

                </form>
        </div>
    </main>

    <!-- main site -->

    <!-- include footer -->
