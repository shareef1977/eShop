<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin-Products</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">

    <!-- for table style -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.2/css/bootstrap.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.12.1/css/dataTables.bootstrap4.min.css">
</head>
<body>
    <div class="container ">
        <div class="row">
          <!-- Image and text -->
          
          <div class="col-md-12 d-flex bg-info">
            <h1 class="text-light m-2  ps-1" style="background-color: pink;width: 2rem; font-weight: bold;">E</h1><h1 style="font-weight: bold;" class="text-light float-left mt-2">SHOP</h1>
            <div class="col-md-10">
                <h4 class="text-light mt-3" style="text-align: center;">Order Management</h4>
            </div>
        </div>
            <%- include('../partials/flash') %> 
            <div class="m-4 d-flex">
             <form action="/adminHome" >
              <button type="submit" class="btn text-danger ms-2">Dashboard</button>
            </form>
            </div>
            

            
            </div>
          </div>
           
               
              
    </div>
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <table id="example" class="table table-striped table-bordered" style="width:100%">
                    <thead>
                        <tr>
                            <th>Order Id</th>
                            <th>Email</th>
                            <th>Mobile</th>
                            <th>Address</th>
                            <th>Payment Method</th>
                            <th>Payment Status</th>
                            <th>Bill</th>
                            <th>Order Status</th>
                            <th>Date</th>
                            <th>Items</th>
                        </tr>
                    </thead>
      
                   
                    <tbody>
                      <% for(let order of orderData) { %> 
                        <tr>
                            <td >#<%= order._id %></td>
                            <td><%= order.address.email %></td>
                            <td><%= order.address.mobile %></td>
                            <td><%= order.address.addressLine %> Pcs</td>
                            <td><%= order.paymentStatus %> </td>
                            <% if(order.iscompleted == true) { %>
                              <td>Completed</td>
                            <% } else{ %>
                              <td>Pending</td>
                            <% } %>   
                            <td>Rs.<%= order.bill %> </td>
                            <td><%= order.orderStatus[0].type %> </td>
                            <td><%= order.orderStatus[0].date %> </td>
                            <td><a class="btn rounded btn-success" href="/orderItems/<%= order._id %> ">View</a></td>
                        </tr>
                       <% } %>  
                    </tbody>
                  </table>
            </div>
        </div>
    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script src="https://cdn.datatables.net/1.12.1/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.12.1/js/dataTables.bootstrap4.min.js"></script>
    <script src="js/adminCategory.js"></script>
</body>
</html>