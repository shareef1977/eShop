<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Details</title>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css" integrity="sha512-xh6O/CkQoPOWDdYTDqeRdPCVd1SpvCA9XXcUnZS2FmJNp1coAFzvtCN9BmamE+4aHK8yyUHUSCcJHgXloTyT2A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    
    <link rel="stylesheet" href="css/addProduct.css">

     <!-- for table style -->
     <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.2/css/bootstrap.css">
     <link rel="stylesheet" href="https://cdn.datatables.net/1.12.1/css/dataTables.bootstrap4.min.css">

</head>
<body>
    <header id="header">
        <div class="col-md-12 d-flex bg-info">
            <h1 class="text-light m-2  ps-3" style="background-color: pink;width: 2rem; font-weight: bold;">E</h1><h1 style="font-weight: bold;" class="text-light float-left mt-2">SHOP</h1>
            <div class="col-md-10">
                <h4 class="text-light mt-3" style="text-align: center;">User Management </h4>
            </div>
        </div>
    </header>

<!-- include header -->

<!-- main site -->

<main id="site-main">
    <div class="container">
        <div class="row">
        <div class="box-nav d-flex justify-between">
            <div class="filter">
             <a href="/adminHome" class="btn btn-success"> Dashboard</a>
            </div>
         </div>  
       
        <!-- form handling -->
        <table id="example" class="table table-striped table-bordered " style="width:100%">
            <thead>
                <tr>
                    <th>User Name</th>
                    <th>@Email Id</th>
                    <th>Mobile</th>
                    <th>Verified</th>
                    <th>Block/Unblock</th>
                    
                </tr>
            </thead>

           
            <tbody>
              <% for(let user of users) { %> 
                <tr>
                    <td><%= user.name %></td>
                    <td><%= user.email %></td>
                    <td><%= user.mobile %></td>
                    <td><%= user.verified %></td>
                <% if(user.blockStatus == false) { %> 
                    <td>
                        <form action="/editUser/<%= user._id %>?_method=PUT " method="post">
                            <button class="btn btn-danger" type="submit">Block</button>
                        </form>
                    </td>
                <% } else { %> 
                    <td>
                        <form action="/editUser/<%= user._id %>?_method=PUT " method="post">
                            <button class="btn btn-success" type="submit">Unblock</button>
                        </form>
                    </td>
                <% } %> 
                </tr>
               <% } %>  
            </tbody>
          </table>
        </div>    
      
    </div>
</main>

<!-- main site -->

